{
	"type": "script",
	"params": {
		"type": "double",
		"is_3d": false
	},
	"script": [
		"double curve(double value:",
			"1.0L - 1.0L / (value ^ 2 + 1.0L)",
		")",
		"double macro = `bigglobe:overworld/raw_rivers`",
		"return(",
			"(macro ^ 2 * 32.0L + 0.09375L)",
			"* curve((macro + `bigglobe:overworld/river_micro_noise_1`) * 128.0L)",
			"* curve((macro + `bigglobe:overworld/river_micro_noise_2`) * 128.0L)",
			"* curve((macro + `bigglobe:overworld/river_micro_noise_3`) * 128.0L)",
			"* curve((macro + `bigglobe:overworld/river_micro_noise_4`) * 128.0L)",
			"+ curve(macro * 6.0L) * `bigglobe:overworld/river_erosion`",
		")"
	]
}