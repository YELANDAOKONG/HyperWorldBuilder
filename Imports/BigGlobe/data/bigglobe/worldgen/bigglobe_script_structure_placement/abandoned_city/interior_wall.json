{
	"placement": [
		"random.if (",
			"setBlockStateReplaceable(0, 3, 0, 'minecraft:cobweb')",
		")",
		"else if (",
			"boolean inventory = false",
			"setBlockStateReplaceable(0, 0, 0,",
				"BlockState(",
					"random.switch (",
						"inventory = true,, 'minecraft:chest',",
						"inventory = true,, 'minecraft:barrel',",
						"'minecraft:crafting_table',",
						"'minecraft:furnace',",
						"'minecraft:loom',",
						"'minecraft:smithing_table',",
						"'minecraft:stonecutter'",
					"),",
					"facing: (",
						"String facing = null",
						"int chance = 0",
						"if (!getBlockState( 1, 0,  0).isReplaceable(): ++chance,, facing = 'west')",
						"if (!getBlockState(-1, 0,  0).isReplaceable() && random.nextInt(:++chance) == 0: facing = 'east')",
						"if (!getBlockState( 0, 0,  1).isReplaceable() && random.nextInt(:++chance) == 0: facing = 'north')",
						"if (!getBlockState( 0, 0, -1).isReplaceable() && random.nextInt(:++chance) == 0: facing = 'south')",
						"if (facing == null: facing = random.switch ('north', 'south', 'east', 'west'))",
						"facing",
					")",
				")",
			")",
			"&& inventory",
		":",
			"mergeBlockData(0, 0, 0,",
				"nbtCompound(",
					"LootTable: 'bigglobe:chests/abandoned_city',",
					"LootTableSeed: random.nextLong()",
				")",
			")",
		")"
	]
}